<div class="w3-container">
  <div class="bar w3-panel w3-border w3-round">
    <img class='w3-image w3-opacity image w3-round' src="/assets/north.jpg"/>
    <i class="icon material-icons  w3-xxxlarge">&#xE566;</i>
    <%= link_to meet_path(meet) do %>
        <span class='w3-padding w3-xlarge title show-link'><%= meet.title %></span>
        <span class='w3-padding w3-large title'><%= meet.date.strftime("%a %b %e %I:%M %P") %></span>
    <% end %>
    <span class='w3-xlarge options'>
      <% if current_user&.editor? %>
        <%= link_to edit_meet_path(meet), remote: true do %>
          <i class="w3-round material-icons w3-margin w3-hover-black">mode_edit</i>
        <% end %>
      <% end %>
      <% if current_user&.admin? %>
        <%= link_to meet, remote: true, method: :delete,  data: { confirm: 'Are you sure?' } do %>
          <i class="w3-round material-icons w3-margin w3-hover-red">delete</i>
        <% end %>
        <% end %>
    </span>
  </div>
</div>