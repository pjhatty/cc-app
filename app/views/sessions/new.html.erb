
<div class="w3-center w3-card w3-display-middle w3-padding-large w3-round w3-border w3-border-blue">
  <%= simple_form_for :session, url: login_path do |f| %>

      <p><%= f.email_field :email, :placeholder => 'Email Address', class: 'w3-round w3-input w3-border' %></p>
      <p><%= f.password_field :password, :placeholder => 'Password', class: 'w3-round w3-input w3-border' %></p>
      <p><%= f.submit 'Log In', class: 'w3-btn w3-round w3-white w3-border w3-border-blue' %></p>

  <% end %>
</div>
