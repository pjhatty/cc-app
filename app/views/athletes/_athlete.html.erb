<div class="w3-container">
  <div class="bar w3-panel w3-border w3-round">
    <img class='w3-image w3-opacity image w3-round' src="/assets/north.jpg"/>
    <i class="icon material-icons  w3-xxxlarge">&#xE8A6;</i>
    <%= link_to athlete_path(athlete) do %>
        <span class='w3-padding w3-xlarge title show-link'><%= athlete.first_name %> <%= athlete.last_name %></span>
    <% end %>

        <span class='w3-padding- w3-xlarge options'>
          <% if current_user&.editor? %>
            <%= link_to edit_athlete_path(athlete), remote: true do %>
              <i class="w3-round material-icons w3-margin w3-hover-black">mode_edit</i>
            <% end %>
          <% end %>
          <% if current_user&.admin? %>
            <%= link_to athlete, remote: true, method: :delete,  data: { confirm: 'Are you sure?' } do %>
              <i class="w3-round material-icons w3-margin w3-hover-red">delete</i>
            <% end %>
          <% end %>
        </span>
  </div>
</div>