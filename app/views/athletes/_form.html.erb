<div class="w3-modal-content w3-center w3-padding-32">
  <span onclick="document.getElementById('athlete-form').style.display='none'"
        class="w3-button w3-display-topright">&times;</span>
  <%= simple_form_for @athlete, remote: true do |f| %>
      <div class="w3-row-padding w3-margin-top">
        <div class="w3-half">
          <%= f.text_field :first_name, placeholder: "First Name", class: 'top-form-field  w3-input w3-border w3-round' %>
        </div>
        <div class="w3-half">
          <%= f.text_field :last_name, placeholder: "Last Name", class: 'w3-input w3-border w3-round' %>
        </div>
      </div>
      <div class='w3-padding'>
        <%= f.text_field :grade, placeholder: "Grade", class: 'w3-input w3-border w3-round' %>
      </div>
      <div class='w3-padding'>
        <%= f.text_area :note, placeholder: "Note", class: 'w3-input w3-border w3-round' %>
      </div>
      <%= f.button :submit, class: 'w3-btn w3-white w3-border w3-border-blue w3-round-large' %>
      <% if current_user&.admin? %>
          <%= link_to @athlete, remote: true, method: :delete,  data: { confirm: 'Are you sure?' } do %>
              <i class="w3-btn w3-white w3-border w3-border-red w3-round-large">Delete</i>
          <% end %>
      <% end %>
  <% end %>
</div>



